<h1>ADNAT</h1> 

<% if current_user %>
    <div class="profile-container">
        <center>
            <%= render "partials/name" %>

            <div class="navigation">
                <div class="flex-row">
                    <%= link_to "← home", root_path %>
                </div>
            </div>
        </center>

    <div class="profile-content">
            <h3 style="color: #D4AC0D"><%= @organization.name %></h3>

            <% if current_user.organization_id.nil? %>
                <div class="smaller-margins">
                    <div class="float-left">
                        <%= link_to 'join', organization_user_join_path(@organization, current_user), :class => "button" %>
                        <%= button_to "delete", @organization, method: "delete", :class => "button" %><br /> 
                    </div>
                </div>
            <% else %>
                <div class="smaller-margins">
                    <%= button_to "delete", @organization, method: "delete", :class => "button" %><br /> 
                </div>
            <% end %>

        <br><h5>hourly rate: </h5>
        <p>$<%= @organization.hourly_rate %></p>
        
        <h5>members: </h5>
        <% users = @organization.users %>
        <% users.each do |user| %>
            <p><%= user.name %></p>
        <% end %>
   
        <h3>edit current organization</h3>
            <%= form_with model: @organization, url: organization_path(@organization), method: "patch" do |f| %>
                <%= f.text_field :name, placeholder: "name", autofocus: true %><br><br>
                <%= f.text_field :hourly_rate, placeholder: "hourly rate", autofocus: true %><br><br>

                <%= f.submit "edit", :class => "button" %>
            <% end %>
    </div>
    </div>
<% else %>
    <%= render "partials/links" %>
<% end %>