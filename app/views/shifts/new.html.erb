<h1>ADNAT</h1> 

<% if current_user %>
    <div class="profile-container">
        <center>
            <%= render "partials/name" %>

            <div class="navigation">
                <div class="flex-row">
                    <%= link_to "← home", root_path %>
                </div>
            </div>
        </center>

        <div class="profile-content">
        <h3>your organization:</h3>
                <% if current_user.organization_id.nil? %>
                    <p>please join an organization</p>
                    <% else %>
                        <p><%= current_user.organization.name %></p>
                <% end %>
            <h3>add shift</h3>
                <%= form_with model: @shift, url: new_user_shift_path(current_user, @shift), method: "post" do |f| %>

                    <%= f.hidden_field :organization, value: current_user.organization.id  %>
                    <%= f.text_field :start, placeholder: "shift start date", autofocus: true %><br><br>
                    <%= f.text_field :finish, placeholder: "shift end date", autofocus: true %><br><br>
                    <%= f.text_field :break_length, placeholder: "break length (minutes)", autofocus: true %><br><br>

                    <%= f.submit "add", :class => "button" %>
                <% end %>
        </div>
    </div>
<% else %>
    <%= render "partials/links" %>
<% end %>